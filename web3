<div class="container">
  <h1>Join Ethena</h1>

  <div class="ref-box" id="refDisplay"></div>

  <button class="connect-btn">ðŸ”— Connect Wallet</button>

  <input type="text" id="wallet" placeholder="Ethereum Wallet Address (0x...)" required>

  <select id="token">
    <option value="">Select Token</option>
    <option value="USDe">USDe</option>
    <option value="ETH">ETH</option>
  </select>

  <div id="usdeSection" class="hidden">
    <input type="number" placeholder="Amount of USDe">
  </div>

  <div id="ethSection" class="hidden">
    <input type="number" placeholder="Amount of ETH">
  </div>

  <button onclick="submitForm()">Submit Application</button>

  <div class="success" id="successMessage"></div>
</div>

<script>
// Auto capture referral code
const params = new URLSearchParams(window.location.search);
const ref = params.get("ref") || "9cj5u";
document.getElementById("refDisplay").innerText = "Referral Code: " + ref;

// Token conditional logic
document.getElementById("token").addEventListener("change", function() {
  document.getElementById("usdeSection").classList.add("hidden");
  document.getElementById("ethSection").classList.add("hidden");

  if(this.value === "USDe") {
    document.getElementById("usdeSection").classList.remove("hidden");
  }
  if(this.value === "ETH") {
    document.getElementById("ethSection").classList.remove("hidden");
  }
});

// Fake submission
function submitForm() {
  const wallet = document.getElementById("wallet").value;

  if(!/^0x[a-fA-F0-9]{40}$/.test(wallet)) {
    alert("Invalid Ethereum wallet address");
    return;
  }

  document.getElementById("successMessage").innerText =
    "Application submitted successfully!";
}
</script>

